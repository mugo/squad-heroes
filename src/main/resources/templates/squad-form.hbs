{{#partial "content"}}
  {{#if editSquad}}
      <h1>Edit {{squad.name}}</h1>
      <form action="/squads/{{squad.id}}" method="post">
          <!--        check line below for potential error due to naming inconsistencies-->
          <div class="form-group">
              <label for="name">Name</label>
              <input id="newName" name="newName" type="text" value="{{squad.newName}}" class="form-control">
          </div>
          <br>
          <div class="form-group">
          <label for="newSize">Size</label>
          <input id="newSize" name="newSize" type="number" value="{{squad.newSize}}" class="form-control">
          </div>
          <br>
          <div class="form-group">
              <label for="newCause">Cause</label>
              <textarea id="newCause" name="newCause" type="text" value="{{squad.newCause}}" class="form-control"></textarea>
          </div>
          <br>
          <button type="submit" class="btn btn-default">Kama Hame!!!</button>
      </form>
  {{else}}
      <h1>Add a new Squad!</h1>
      <form action="/squads" method="post">
          <div class="form-group">
              <label for="name">Squad Name</label>
              <input id="name" name="name" type="text" class="form-control">
          </div>
          <br>
          <div class="form-group">
              <label for="size">Squad Size</label>
              <input id="size" name="size" type="number" class="form-control">
          </div>
          <br>
          <div class="form-group">
              <label for="cause">Squad Cause</label>
              <textarea id="cause" name="cause" type="text" class="form-control"></textarea>
          </div>
          <br>
          <button type="submit" class="btn btn-default">Kama Hame!!!</button>
      </form>
  {{/if}}
{{/partial}}

{{> layout.hbs}}
